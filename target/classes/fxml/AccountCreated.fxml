<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="800.0" prefWidth="1200.0" spacing="20.0" style="-fx-background-color: #f0f0f0;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.matrimony.controller.AccountCreatedController">
   <padding>
      <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
   </padding>
   
   <!-- Success Title -->
   <Label style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #333333;" text="Account Created Successfully!" />
   
   <!-- User Info -->
   <VBox alignment="CENTER" spacing="10.0" style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 10;">
      <Label style="-fx-font-size: 14px; -fx-text-fill: #666666;" text="Welcome," />
      <Label fx:id="fullNameLabel" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2196F3;" text="User Name" />
      
      <Label style="-fx-font-size: 12px; -fx-text-fill: #666666;" text="Your account has been created with:">
         <VBox.margin>
            <Insets top="15.0" />
         </VBox.margin>
      </Label>
      
      <Label style="-fx-font-size: 12px; -fx-text-fill: #888888;" text="Email:" />
      <Label fx:id="emailLabel" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #333333;" text="user@example.com" />
   </VBox>
   
   <!-- Success Messages -->
   <VBox alignment="CENTER_LEFT" spacing="8.0" style="-fx-padding: 20 40 20 40;" />
   
   <!-- Go to Login Button -->
   <Button fx:id="goToLoginButton" onAction="#handleGoToLogin" style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-size: 16px; -fx-padding: 12 40 12 40; -fx-background-radius: 5; -fx-cursor: hand;" text="Go to Login Page">
      <VBox.margin>
         <Insets top="20.0" />
      </VBox.margin>
   </Button>
</VBox>
