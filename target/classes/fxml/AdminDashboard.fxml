<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="800.0" prefWidth="1200.0" spacing="0" style="-fx-background-color: #f5f5f5;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.matrimony.controller.AdminDashboardController">

    <!-- Header -->
    <HBox alignment="CENTER_LEFT" spacing="20" style="-fx-background-color: #d32f2f; -fx-padding: 20;">
        <Label style="-fx-text-fill: white; -fx-font-size: 28px; -fx-font-weight: bold;" text="Admin Dashboard">
            <font>
                <Font name="System Bold" size="28.0" />
            </font>
        </Label>
        <Region HBox.hgrow="ALWAYS" />
        <Label fx:id="adminNameLabel" style="-fx-text-fill: white; -fx-font-size: 16px;" text="Admin" />
        <Button fx:id="logoutButton" onAction="#handleLogout" style="-fx-background-color: white; -fx-text-fill: #d32f2f; -fx-font-size: 14px; -fx-padding: 10 20; -fx-background-radius: 5; -fx-cursor: hand;" text="Logout" />
    </HBox>

    <!-- Statistics Section -->
    <HBox spacing="20" style="-fx-padding: 30;">
        <VBox spacing="10" style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 10; -fx-min-width: 200;" HBox.hgrow="ALWAYS">
            <Label style="-fx-font-size: 14px; -fx-text-fill: gray;" text="Total Users" />
            <Label fx:id="totalUsersLabel" style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: #2196F3;" text="0" />
        </VBox>

        <VBox spacing="10" style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 10; -fx-min-width: 200;" HBox.hgrow="ALWAYS">
            <Label style="-fx-font-size: 14px; -fx-text-fill: gray;" text="Active Users" />
            <Label fx:id="activeUsersLabel" style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: #4CAF50;" text="0" />
        </VBox>

        <VBox spacing="10" style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 10; -fx-min-width: 200;" HBox.hgrow="ALWAYS">
            <Label style="-fx-font-size: 14px; -fx-text-fill: gray;" text="Blocked Users" />
            <Label fx:id="blockedUsersLabel" style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: #f44336;" text="0" />
        </VBox>
    </HBox>

    <!-- Search and Filter Section -->
    <HBox alignment="CENTER_LEFT" spacing="15" style="-fx-padding: 0 30 20 30;">
        <Label style="-fx-font-size: 14px;" text="Search:" />
        <TextField fx:id="searchField" onKeyReleased="#handleSearch" promptText="Search by name or email..." style="-fx-pref-width: 300px;" />
    </HBox>

    <!-- User List Section -->
    <VBox style="-fx-padding: 0 30 30 30;" VBox.vgrow="ALWAYS">
        <Label style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-padding: 0 0 15 0;" text="User Management" />

        <ScrollPane fitToWidth="true" style="-fx-background-color: transparent;" VBox.vgrow="ALWAYS">
            <VBox fx:id="usersContainer" spacing="10" style="-fx-padding: 10;" />
        </ScrollPane>
    </VBox>

</VBox>
