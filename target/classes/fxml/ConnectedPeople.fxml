<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.matrimony.controller.ConnectedPeopleController"
            prefHeight="800.0" prefWidth="1200.0">
    <top>
        <HBox spacing="15" style="-fx-background-color: #4CAF50; -fx-padding: 15;">
            <Button fx:id="backButton" text="Back to Dashboard" onAction="#handleBackToDashboard"
                    style="-fx-background-color: white; -fx-text-fill: #4CAF50; -fx-font-weight: bold;"/>
            <Label text="Connected People" style="-fx-text-fill: white; -fx-font-size: 24px; -fx-font-weight: bold;"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Label fx:id="userNameLabel" text="" style="-fx-text-fill: white; -fx-font-size: 14px;"/>
        </HBox>
    </top>
    <center>
        <ScrollPane fitToWidth="true" style="-fx-background-color: #f5f5f5;">
            <VBox spacing="20" style="-fx-padding: 30;">
                <VBox fx:id="connectedPeopleContainer" spacing="15">
                </VBox>
                <VBox fx:id="noDataMessage" spacing="15" alignment="CENTER"
                      style="-fx-background-color: white; -fx-padding: 50; -fx-background-radius: 10;">
                    <Label text="No Connected People Yet"
                           style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #4CAF50;"/>
                    <Label text="You haven't connected with anyone yet. Accept contact requests to connect with people."
                           style="-fx-font-size: 14px; -fx-text-fill: #666;"/>
                    <Button text="Check Contact Requests" onAction="#handleCheckContactRequests"
                            style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10 30;"/>
                </VBox>
            </VBox>
        </ScrollPane>
    </center>
</BorderPane>

