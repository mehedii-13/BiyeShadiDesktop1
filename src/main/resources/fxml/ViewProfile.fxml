<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.matrimony.controller.ViewProfileController"
      prefHeight="800.0" prefWidth="1200.0"
      style="-fx-background-color: #f5f5f5;" spacing="0">

    <!-- Header -->
    <HBox style="-fx-background-color: slateblue; -fx-padding: 20;" alignment="CENTER_LEFT" spacing="20">
        <Button fx:id="backButton" text="â† Back" onAction="#handleBack"
                style="-fx-background-color: white; -fx-text-fill: slateblue; -fx-font-size: 14px; -fx-padding: 10 20; -fx-background-radius: 5; -fx-cursor: hand;"/>
        <Label text="View Full Profile" style="-fx-text-fill: white; -fx-font-size: 24px; -fx-font-weight: bold;">
            <font>
                <Font name="System Bold" size="24.0"/>
            </font>
        </Label>
    </HBox>

    <!-- Content Area -->
    <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS" style="-fx-background-color: #f5f5f5;">
        <VBox fx:id="contentContainer" spacing="20" style="-fx-padding: 30;">
            <!-- Profile content will be loaded here dynamically -->
            <Label text="Loading profile..." style="-fx-font-size: 18px; -fx-text-fill: gray;"/>
        </VBox>
    </ScrollPane>

</VBox>

